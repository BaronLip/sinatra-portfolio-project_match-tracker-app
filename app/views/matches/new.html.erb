<h1>Add a Match</h1>

<% if logged_in? %>

    <form id="new_match" action='/matches/new' method="post">
        <!-- Auto-assign user-id to new Match.-->
        <input type="hidden" name="match[user_id]" value="<%= current_user.id %>">

        <label>Date of Match</label>
        <input type="date" name="match[date]">
        <br>

        <label>Your Score:</label>
        <input type="text" name="match[user_score]">
        <br>

        <label>Opponents Score:</label>
        <input type="text" name="match[opponent_score]">
        <br>

        <label>Opponent Name:</label>
        <input type="text" name="opponent[username]">
        <br>

        <label>Opponent Age:</label>
        <input type="number" name="opponent[age]">
        <br>

        <label>Opponent Gender: </label>
        <input type="radio" name="opponent[gender]" value="male"> male
        <input type="radio" name="opponent[gender]" value="female"> female
        <br>

        <label>Opponent Location:</label>
        <input type="text" name="opponent[address]">
        <br>

        <label for="notes">Notes</label>
        <textarea rows="5" cols="30" form="new_match" name="match[user_notes]">
        </textarea>
        <br>

        <input type="submit" value="Add Match">
    </form>



<% else %>
    <h3>Log in to make a match.</h3>
<% end %>